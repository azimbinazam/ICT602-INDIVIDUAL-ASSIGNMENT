<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="20dp">

    <!-- Student Information -->
    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name: Muhammad Azim Mohamad Azam\nStudent ID: 2023119119\nCourse: ICT602 - Web Technology And Application\nProject: Monthly Electricity Bill Estimator"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="https://github.com/azimbinazam/ICT602-INDIVIDUAL-ASSIGNMENT.git"
        android:autoLink="web"
        android:textColor="@color/colorSecondary"
        android:textSize="16sp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
